<%- include('./partials/header'); %>
<div class="container mt-4">
    <h1 class="text-center display-4 mb-5">Shopping Cart</h1>
    <div class="row justify-content-center">
        <% cartProduct.forEach(function(product) { %>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="<%= product.imagen %>" class="card-img-top" alt="<%= product.nombre %>" style="height: 250px; object-fit: cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title"><%= product.nombre %></h5>
                        <p class="card-text text-muted"><%= product.descripcion %></p>
                        <p class="h5 text-primary"><strong>$<%= product.precio.toLocaleString('es-ES') %></strong></p>
                        <p class="small text-muted">Usuario: <%= product.fullname %></p>
                        <p class="small text-muted">ID: <%= product.id %></p>
                        <div class="card-body text-center">
                            <a class="btn btn-primary w-100 btn-sm" href="/cart/eliminar/<%= product.id %>">Delete on cart</a>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<%- include('./partials/footer'); %>
