<%- include('../partials/header'); %>

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <p class="h3 text-center mb-4">Edit Product</p>
        <form class="row g-3" action="/productos/edit/<%= producto.id %>" method="POST">
            <div class="col-md-6">
                <label for="id" class="form-label fw-bold">ID</label>
                <input type="number" class="form-control" id="id" name="id" value="<%= producto.id %>" required>
            </div>
            <div class="col-md-6">
                <label for="nombre" class="form-label fw-bold">Name</label>
                <input type="text" class="form-control" id="nombre" name="nombre" value="<%= producto.nombre %>" required>
            </div>
            <div class="col-md-12">
                <label for="descripcion" class="form-label fw-bold">Description</label>
                <textarea class="form-control" id="descripcion" name="descripcion" rows="3" required><%= producto.descripcion %></textarea>
            </div>
            <div class="col-md-6">
                <label for="precio" class="form-label fw-bold">Price</label>
                <input type="number" class="form-control" id="precio" name="precio" value="<%= producto.precio %>" required>
            </div>
            <div class="col-md-6">
                <label for="imagen" class="form-label fw-bold">Image</label>
                <input type="text" class="form-control" id="imagen" name="imagen" value="<%= producto.imagen %>" required>
            </div>
            <div class="d-grid gap-2 col-12 mx-auto mt-3">
                <button type="submit" class="btn btn-warning btn-sm">Edit</button>
            </div>
        </form>
    </div>
</div>

<%- include('../partials/footer'); %>

