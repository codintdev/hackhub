<%- include('../partials/header'); %>
<!-- MODAL -->
<div class="modal" id="modal-eliminar" tabindex="-1" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Product</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="cancelar()"></button>
      </div>
      <div class="modal-body">
        <p>Â¿Estas seguro que quieres eliminar el producto?</p>
      </div>
      <div class="modal-footer">
        <button type="button" id="cancelar-eliminar" class="btn btn-secondary btn-sm" data-bs-dismiss="modal" onclick="cancelar()">Close</button>
        <button type="button" class="btn btn-danger btn-sm" id="confirmar-eliminar">Delete</button>
        <p id="mensaje-eliminar" style="display: none;" class="alert alert-success"></p>
      </div>
    </div>
  </div>
</div>
<!--  PRODUCTOS -->
<div class="container mt-4">
    <p class="h1 text-center mb-5">List of Products</p>
    <div class="row g-4">
        <% productos.forEach(function(producto) { %>
        <div class="col-md-4 d-flex">
            <div class="card h-100 shadow-sm">
                <img src="<%= producto.imagen %>" class="card-img-top" alt="<%= producto.nombre %>" style="max-height: 300px; object-fit: cover; width: 100%;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold"><%= producto.nombre %></h5>
                    <p class="card-text"><%= producto.descripcion %></p>
                    <p class="card-text text-success fw-bold">Price: <%= producto.precio.toLocaleString('es-ES') %></p>
                    <div class="mt-auto">
                        <a class="btn btn-warning btn-sm w-100" href="/productos/edit/<%= producto.id %>">Edit</a>
                        <button class="btn btn-danger w-100 mb-2 btn-sm" onclick="eliminarProducto('<%= producto.id %>')">Delete</button>
                        <a class="btn btn-primary btn-sm w-100" onclick="document.getElementById('form-add-cart-<%= producto.id %>').submit();">Add Cart</a>
                        <form id="form-add-cart-<%= producto.id %>" action="/cart/new/<%= producto.id %>" method="post" style="display: none;"></form>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<%- include('../partials/footer'); %>
